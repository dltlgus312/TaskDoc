<?xml version="1.0" encoding="UTF-8"?>
	<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 다른 mapper과 중복 되지 않도록 네임스페이스 기재 -->
<mapper namespace="privatetask_SQL">
	<select id="privatetasklist" resultType="privatetask">

		SELECT * FROM privatetask WHERE uid=#{uid} ORDER BY ptcode ASC

	</select>
	
	<select id="privatetaskview" resultType="privatetask">
	
		SELECT * FROM privatetask WHERE ptcode=#{ptcode}
	
	</select>

	<insert id="privatetaskinsert" parameterType="privatetask" useGeneratedKeys="true" keyProperty="ptcode">

		INSERT INTO privatetask VALUES(null, #{pttitle}, #{ptcolor}, #{ptsdate}, #{ptedate}, 0, 0, #{ptrefference}, #{tcode}, #{uid})

	</insert>
	
	<update id="privatetaskupdate" parameterType="privatetask">
		
		UPDATE privatetask SET pttitle=#{pttitle}, ptcolor=#{ptcolor}, ptsdate=#{ptsdate}, ptedate=#{ptedate}, ptpercent=#{ptpercent} WHERE ptcode=#{ptcode}
		
	</update>
	
	<delete id="privatetaskdelete">
	
		DELETE FROM privatetask WHERE ptcode=#{ptcode}
	
	</delete>
</mapper>
	