<?xml version="1.0" encoding="UTF-8"?>
	<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 다른 mapper과 중복 되지 않도록 네임스페이스 기재 -->
<mapper namespace="decisionitem_SQL">
	<select id="decisionitemlist" resultType="decisionitem">
		
		SELECT * FROM decisionitem WHERE dscode=#{dscode} ORDER BY dsisequence ASC

	</select>

	<select id="decisionitemview" resultType="decisionitem">

		SELECT * FROM decisionitem WHERE dsicode=#{dsicode}

	</select>

	<insert id="decisioniteminsert" parameterType="decisionitem"
		useGeneratedKeys="true" keyProperty="dsicode">

		INSERT INTO decisionitem VALUES(null, #{dsilist}, #{dsisequence}, #{dscode})

	</insert>

	<update id="decisionitemupdate" parameterType="decisionitem">
	
		UPDATE decisionitem SET dsilist=#{dsilist} WHERE dsicode=#{dsicode}

	</update>

	<delete id="decisionitemdelete">

		DELETE FROM decisionitem WHERE dsicode=#{dsicode}

	</delete>
</mapper>
	